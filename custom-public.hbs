            </div>
        </div>

        <h2>Workshops</h2>
        <section class="ghos3-workshops">
            {{#get "posts" filter=(concat "tags:workshop+tags:public+tags:s3-" (date published_at format="YYYY")) include="tags,authors"}}
            {{#match posts.length "=" 0}}
                <p>Coming soon...</p>
            {{/match}}
            {{#foreach posts}}
                {{> "workshop"}}
            {{/foreach}}
            {{/get}}
        </section>

        
        <h2>Lectures</h2>
        <section class="ghos3-lectures">
            {{#get "posts" filter=(concat "tags:lecture+tags:public+tags:s3-" (date published_at format="YYYY")) include="tags,authors"}}
            {{#match posts.length "=" 0}}
                <p>Coming soon...</p>
            {{/match}}
            {{#foreach posts}}
                {{> "lecture-public"}}
            {{/foreach}}
            {{/get}}
        </section>

    </div>

</article>
{{/post}}