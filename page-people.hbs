{{!< default}}

{{#post}}
<article class="ghos3-article {{post_class}}">
    <header class="ghos3-people-header">
        <h1 class="ghos3-title">By young experts, for future experts</h1>
        <p>
            The Summer School of Science is organized by an expert team of young scientists and STEM majors, who ensure a high level of quality, as well as a personable touch.
        </p>
    </header>
    {{#match @page.show_title_and_feature_image}}
    <header class="ghos3-header ghos3-canvas">
        <h1 class="ghos3-title">{{title}}</h1>

        {{#if custom_excerpt}}
            <p class="ghos3-excerpt">{{custom_excerpt}}</p>
        {{/if}}

        {{#if feature_image}}
            <figure class="ghos3-feature-image">
                <img src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                {{#if feature_image_caption}}
                    <figcaption>{{feature_image_caption}}</figcaption>
                {{/if}}
            </figure>
        {{/if}}
    </header>
    {{/match}}

    <div class="ghos3-container ghos3-people-container">
        {{content}}
    </div>

</article>
{{/post}}